<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="XamarinHW.AppShell"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:XamarinHW"
    xmlns:pages="clr-namespace:XamarinHW.Pages">


    <TabBar>
        <Tab
            Title="MainPage"
            Icon="coffeeBean.png"
            Route="MainPage">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>

        <Tab 
            Title="Page1" 
            Icon="coffeeBean.png">
            <ShellContent
                Title="Main Page"
                ContentTemplate="{DataTemplate local:MainPage}"
                Icon="coffeeBean.png" />
            <ShellContent
                Title="Page2"
                ContentTemplate="{DataTemplate pages:HttpPage}"
                Icon="coffeeBean.png"
                Route="HttpPage" />
        </Tab>

        <Tab 
            Title="Page2" 
            Icon="coffeeBean.png">
            <ShellContent ContentTemplate="{DataTemplate pages:HttpPage}" />
        </Tab>
        <Tab 
            Title="Search" 
            Icon="coffeeBean.png">
            <ShellContent ContentTemplate="{DataTemplate pages:SearcgPage}" />
        </Tab>
    </TabBar>
</Shell>