<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="XamarinHW.AppShell"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:XamarinHW.Pages"
    xmlns:local="clr-namespace:XamarinHW">


    <TabBar Title="NAV">
        <Tab Title="MainPage" Icon="coffeeBean.png">
            <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
        </Tab>

        <Tab Title="Page1" Icon="coffeeBean.png">
            <ShellContent Title="Main Page"
                      Icon="coffeeBean.png"
                      ContentTemplate="{DataTemplate local:MainPage}" />
            <ShellContent Title="Page2"
                      Icon="coffeeBean.png"
                      ContentTemplate="{DataTemplate pages:HttpPage}" />
        </Tab>

        <Tab Title="Page2" Icon="coffeeBean.png">
            <ShellContent ContentTemplate="{DataTemplate pages:HttpPage}" />
        </Tab>
    </TabBar>
</Shell>