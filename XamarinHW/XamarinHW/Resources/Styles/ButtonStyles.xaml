<?xml version="1.0" encoding="UTF-8" ?>
<ResourceDictionary
    x:Class="XamarinHW.Resources.Styles.ButtonStyles"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Style x:Key="ButtonEnd" TargetType="Button">
        <Setter Property="CornerRadius" Value="3" />
        <Setter Property="BorderColor" Value="Gray" />
        <Setter Property="BorderWidth" Value="1" />
    </Style>

    <Style x:Key="ButtonProperty" TargetType="Button">
        <Setter Property="Grid.Column" Value="2" />
        <Setter Property="Margin" Value="8" />
        <Setter Property="BackgroundColor" Value="Bisque" />
        <Setter Property="CornerRadius" Value="30" />
        <Setter Property="HeightRequest" Value="22" />
        <Setter Property="VerticalOptions" Value="Center" />
        <Setter Property="Padding" Value="0" />
    </Style>

</ResourceDictionary>